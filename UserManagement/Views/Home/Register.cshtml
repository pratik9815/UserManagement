@using UserManagement.Application.DTOs
@model CreateApplicationUserDTO
@{
    ViewData["Title"] = "Register User";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />

<link href="~/css/register.css" rel="stylesheet" />
<style>
    .avatar-placeholder {
        width: 60px;
        height: 60px;
        background-color: #cccccc;
        border-radius: 50%;
        margin: 0 auto 2rem;
    }

    .form-container {
        max-width: 450px;
        margin: 2rem auto;
        padding: 2rem;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.75rem 1rem;
    }

    .btn-create {

        width: 100%;

        border: 1px solid #333;
        border-radius: 25px;
        padding: 0.75rem;
        color: #333;
        background-color: transparent;
    }

    .btn-create:hover {
        background-color: #393636;
        color: white;
    }

    .password-field {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 0.5rem;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        text-decoration: none;
        font-size: 1.1rem;
        border: none;
        background: transparent;
    }
</style>

<div class="container">
    <div class="form-container">
        <div class="avatar-placeholder"></div>
        <h1 class="text-center mb-4">Create an account</h1>
        <div class="text-center mb-4">
            Already have an account? <a asp-action="Index" asp-controller="Home" class="text-dark">Log in</a>
        </div>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Message
            </div>
        }

        <form method="post">
            <div class="mb-3 form-group">
                @Html.LabelFor(m => m.Username, new { @class = "form-label" })

                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @id = "Username", @placeholder = "Enter your profile name" })

                @Html.ValidationMessageFor(m => m.Username, null, new { @class = "text-danger" })
            </div>

            <div class="mb-3 form-group">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "Email", @placeholder = "Enter your email" })
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </div>

            <div class="mb-4 form-group">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                <div class="password-field">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "Password" ,@placeholder = "Enter your password" })
                    <button type="button" class="password-toggle" id="togglePassword"><i class="fas fa-eye eyeicn" id="eyeIcon"></i></button>
                </div>
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
            </div>
            <div class="mb-4 form-group">

                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                <div class="password-field">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "ConfirmPassword", @placeholder = "Confirm your password" })
                    <button type="button" class="password-toggle" id="toggleConfirmPassword">
                        <i class="fas fa-eye eyeicn" id="eyeIconConfirm"></i>
                    </button>
                </div>
                @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-create">Create an account</button>
        </form>

    </div>
</div>

<script src="~/js/register.js"></script>
