@{
    ViewData["Title"] = "User Management";
}
@* <button class="btn btn-primary" asp-action="Logout">Logout</button> *@
<h1>User Management</h1>

<div class="user-management">
    <!-- User List -->
    <div class="user-list">
        <h3>Users</h3>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>john_doe</td>
                    <td>john.doe@example.com</td>
                    <td>Admin</td>
                    <td>
                        <button>Edit</button>
                        <button>Delete</button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>jane_smith</td>
                    <td>jane.smith@example.com</td>
                    <td>User</td>
                    <td>
                        <button>Edit</button>
                        <button>Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Role Assignment -->
    <div class="role-assignment">
        <h3>Assign Roles</h3>
        <form>
            <label for="username">Username:</label>
            <input type="text" id="username" placeholder="Enter username">

            <label for="role">Role:</label>
            <select id="role">
                <option value="Admin">Admin</option>
                <option value="User">User</option>
                <option value="Manager">Manager</option>
            </select>

            <button type="submit">Assign Role</button>
        </form>
    </div>
</div>

<style>
    .user-management {
        display: flex;
        flex-direction: column;
        gap: 30px;
        margin-top: 20px;
    }

    .user-list table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    .user-list th, .user-list td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
    }

    .user-list th {
        background-color: #f4f4f4;
    }

    .role-assignment form {
        display: flex;
        flex-direction: column;
        gap: 15px;
        width: 300px;
    }

    .role-assignment label {
        font-weight: bold;
    }

    .role-assignment input, .role-assignment select, .role-assignment button {
        padding: 8px;
        font-size: 1em;
    }

    .role-assignment button {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .role-assignment button:hover {
            background-color: #0056b3;
        }
</style>
